// Project-local debug tasks
//
// For more documentation on how to configure debug tasks,
// see: https://zed.dev/docs/debugger
[
  {
    "label": "Debug taskproc (Ninja)",
    "build": {
      "command": "ninja",
      "args": ["-C", "build", "-j8"],
      "cwd": "$ZED_WORKTREE_ROOT"
    },
    "program": "$ZED_WORKTREE_ROOT/build/taskproc",
    "args": ["load", "./examples/sample_tasks.json"],
    "cmd": "$ZED_WORKTREE_ROOT",
    "request": "launch",
    "adapter": "CodeLLDB"
  }
]
